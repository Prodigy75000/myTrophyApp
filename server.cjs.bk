// server.js
const { Buffer } = require("buffer");
const dns = require("dns");
dns.setServers(["8.8.8.8", "1.1.1.1"]); // âœ… force reliable DNS

const express = require("express");
const cors = require("cors");
const dotenv = require("dotenv");
const {
  exchangeNpssoForCode,
  exchangeCodeForAccessToken,
  getProfileFromUserName,
} = require("psn-api");
const fetch = (...args) =>
  import("node-fetch").then(({ default: fetch }) => fetch(...args));

dotenv.config();

const app = express();
app.use(cors());
app.use(express.json());

const NPSSO = process.env.PSN_NPSSO;
let accessCache = null;
const trophyCache = new Map();
async function getAccessToken() {
  if (accessCache && Date.now() < accessCache.expiresAt) {
    return accessCache.token;
  }
  const code = await exchangeNpssoForCode(NPSSO);
  const tokens = await exchangeCodeForAccessToken(code);
  accessCache = {
    token: tokens.accessToken,
    expiresAt: Date.now() + tokens.expiresIn * 1000,
  };
  return accessCache.token;
}
// ---------------- LOGIN ----------------
app.get("/api/login", async (req, res) => {
  try {
    const authorization = await exchangeNpssoForCode(NPSSO);
    const tokenData = await exchangeCodeForAccessToken(authorization);

    let decodedPayload;
    try {
      const base64Payload = tokenData.accessToken.split(".")[1];
      const normalized = base64Payload.replace(/-/g, "+").replace(/_/g, "/");
      decodedPayload = JSON.parse(Buffer.from(normalized, "base64").toString("utf8"));
    } catch (e) {
      console.error("âš ï¸ Failed to decode accessToken:", e.message);
    }

    const accountId =
      decodedPayload?.account_id ||
      decodedPayload?.accountId ||
      tokenData.accountId ||
      tokenData.user_id ||
      null;

    console.log("âœ… PSN access token retrieved for:", accountId);
    res.json({
      accessToken: tokenData.accessToken,
      refreshToken: tokenData.refreshToken,
      expiresIn: tokenData.expiresIn,
      accountId,
      tokenType: tokenData.tokenType || "Bearer",
    });
  } catch (err) {
    console.error("âŒ Login error:", err.message);
    res.status(500).json({
      error: "Failed to retrieve PSN access token",
      details: err.message,
    });
  }
});
// ---------------- PROFILE ----------------
app.get("/api/profile/:username", async (req, res) => {
  try {
    const accessToken = await getAccessToken();
    const profile = await getProfileFromUserName(accessToken, req.params.username);
    res.json(profile);
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: err.message });
  }
});

// ---------------- TROPHIES ----------------
app.get("/api/trophies/:accountId", async (req, res) => {
  try {
    const authHeader = req.headers.authorization;
    if (!authHeader?.startsWith("Bearer ")) {
      return res.status(401).json({ error: "Missing token" });
    }

    const accessToken = authHeader.split(" ")[1];
    const { accountId, npCommunicationId } = req.params;

    console.log("[GAME TROPHIES]", {
      accountId,
      npCommunicationId,
    });
    const baseUrl = `https://m.np.playstation.com/api/trophy/v1/users/${accountId}/trophyTitles`;

    let allTitles = [];
    let offset = 0;
    const limit = 100;

    while (true) {
      const url = `${baseUrl}?limit=${limit}&offset=${offset}`;

      const r = await fetch(url, {
        headers: {
          Authorization: `Bearer ${accessToken}`,
          "Accept-Language": "en-US",
        },
      });

      if (!r.ok) {
        const t = await r.text();
        return res.status(r.status).json({ error: t });
      }

      const json = await r.json();
      const page = json.trophyTitles ?? [];

      allTitles.push(...page);

      if (page.length < limit) break;
      offset += limit;
    }

    res.json({
      totalItemCount: allTitles.length,
      trophyTitles: allTitles,
    });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: err.message });
  }
});
// ---------------- GAME TROPHIES (REPLACE ENTIRE BLOCK WITH THIS) ----------------
app.get("/api/trophies/:accountId/:npCommunicationId", async (req, res) => {
  console.log("ðŸ”¥ GAME TROPHIES ROUTE HIT", req.params);

  try {
    const authHeader = req.headers.authorization;
    if (!authHeader?.startsWith("Bearer ")) {
      return res.status(401).json({ error: "Missing token" });
    }

    const accessToken = authHeader.split(" ")[1];
    const { accountId, npCommunicationId } = req.params;

    // --- HELPER: RETRY LOGIC FOR PS3/PS4 ---
    const fetchWithFallback = async (baseUrl) => {
      const headers = {
        Authorization: `Bearer ${accessToken}`,
        "Accept-Language": "en-US",
        "User-Agent": "Mozilla/5.0",
      };

      // 1. Try Default (PS5 style)
      console.log(`[Attempt 1] Fetching: ${baseUrl}`);
      let response = await fetch(baseUrl, { headers });

      // 2. If it fails with 404 (Resource not found), try LEGACY param
      if (!response.ok && response.status === 404) {
        console.log(
          `[Legacy Retry] âš ï¸ Default failed. Retrying with ?npServiceName=trophy`
        );

        // Append query param correctly
        const separator = baseUrl.includes("?") ? "&" : "?";
        const legacyUrl = `${baseUrl}${separator}npServiceName=trophy`;

        response = await fetch(legacyUrl, { headers });
      }

      // If it STILL fails, throw the error
      if (!response.ok) {
        const text = await response.text();
        throw new Error(`PSN API Error (${response.status}): ${text}`);
      }

      return response.json();
    };

    // ----------------------------------------

    // A. FETCH USER EARNED STATUS
    const progressUrl = `https://m.np.playstation.com/api/trophy/v1/users/${accountId}/npCommunicationIds/${npCommunicationId}/trophyGroups/all/trophies`;

    let progressJson;
    try {
      progressJson = await fetchWithFallback(progressUrl);
    } catch (e) {
      console.error("âŒ Error fetching progress:", e.message);
      // Stop here if we can't get the user's progress
      return res
        .status(404)
        .json({ error: "Game not found or user has no trophies for it." });
    }

    const progress = progressJson.trophies ?? [];
    console.log(`[TROPHY PROGRESS] Found ${progress.length} items`);

    // B. FETCH STATIC DETAILS (Names, Icons)
    const defUrl = `https://m.np.playstation.com/api/trophy/v1/npCommunicationIds/${npCommunicationId}/trophyGroups/all/trophies`;

    let defJson = { trophies: [] };
    try {
      defJson = await fetchWithFallback(defUrl);
    } catch (e) {
      console.warn("âš ï¸ Error fetching definitions (using fallback):", e.message);
    }

    const definitions = defJson.trophies ?? [];

    // C. MERGE DATA
    const merged = definitions.map((def) => {
      const user = progress.find((p) => p.trophyId === def.trophyId);
      return {
        ...def,
        earned: user?.earned ?? false,
        earnedDateTime: user?.earnedDateTime ?? null,
        trophyEarnedRate: def.trophyEarnedRate ?? def.trophyRare ?? "0",
      };
    });

    // Fallback: if definitions failed, just send the raw progress data
    const finalData = merged.length > 0 ? merged : progress;

    return res.json({ trophies: finalData });
  } catch (err) {
    console.error("ðŸ”¥ SERVER ERROR:", err);
    res.status(500).json({ error: err.message });
  }
});

